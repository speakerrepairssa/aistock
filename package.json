{
  "name": "aistock",
  "version": "1.0.0",
  "description": "AI-powered inventory management system with OCR stock updates",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test",
    "migrate": "node --loader ts-node/esm scripts/migrateToSubcollections.ts",
    "migrate-settings": "node --loader ts-node/esm scripts/migrateUserSettings.ts",
    "cleanup": "node --loader ts-node/esm scripts/deleteOldData.ts"
  },
  "keywords": [
    "inventory",
    "stock",
    "ocr",
    "firebase"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0"
  }
}
